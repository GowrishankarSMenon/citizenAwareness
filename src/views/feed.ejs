<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <style>
        #mapPanel {
            height: 400px; 
            width: 300px; 
            position: fixed;
            top: 10px;
            right: 10px;
            transform: translateX(100%); /* Hide initially */
            transition: transform 0.5s ease, opacity 0.5s ease; /* Smooth transition */
            z-index: 1000;
            background: white;
            border: 1px solid #ddd;
            opacity: 0; /* Hide opacity initially */
            overflow: hidden;
        }
        #mapPanel.open {
            transform: translateX(0); /* Slide in */
            opacity: 1; /* Fade in */
        }
        #mapButton {
            position: fixed;
            top: 10px;
            right: 10px;
            background: #007bff;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 50%;
            cursor: pointer;
            z-index: 1001;
        }
        #map {
            height: 100%;
            width: 100%;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/feed">Home</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/create-post">Create Post</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/my-posts">My Posts</a>
                </li>
            </ul>
            <form action="/logout" method="GET" class="d-inline">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </nav>
    <div class="container mt-4">
        <h1>Feed</h1>
        <form action="/feed" method="GET">
            <div class="form-group mt-3" id="radius-group">
                <label for="radius" class="form-label">Radius:</label>
                <select id="radius" name="radius" class="form-select">
                    <option value="">All Posts</option>
                    <option value="1000" <%= radius === '1000' ? 'selected' : '' %>>1 km</option>
                    <option value="5000" <%= radius === '5000' ? 'selected' : '' %>>5 km</option>
                    <option value="10000" <%= radius === '10000' ? 'selected' : '' %>>10 km</option>
                    <option value="100000" <%= radius === '100000' ? 'selected' : '' %>>10+ km</option>
                </select>
            </div>
            <input type="hidden" id="latitude" name="latitude" value="<%= user ? user.latitude : '' %>">
            <input type="hidden" id="longitude" name="longitude" value="<%= user ? user.longitude : '' %>">
            <button type="submit" class="btn btn-primary mt-2">Apply</button>
        </form>

        <% const totalPosts = groupedPosts.high.length + groupedPosts.medium.length + groupedPosts.low.length; %>
        <p class="mt-4">Showing <%= totalPosts %> posts.</p>

        <% if (groupedPosts.high.length > 0) { %>
            <h2 class="mt-4">Top Priority</h2>
            <ul class="list-group">
                <% groupedPosts.high.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.locationName) { %>
                            <p><strong>Location:</strong> <%= post.locationName %></p>
                        <% } %>
                        <% if (post.imageUrl) { %>
                            <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 300px;">
                        <% } %>
                        <% if (post.videoUrl) { %>
                            <video controls style="max-width: 300px;">
                                <source src="<%= post.videoUrl %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } %>

        <% if (groupedPosts.medium.length > 0) { %>
            <h2 class="mt-4">Medium Priority</h2>
            <ul class="list-group">
                <% groupedPosts.medium.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.locationName) { %>
                            <p><strong>Location:</strong> <%= post.locationName %></p>
                        <% } %>
                        <% if (post.imageUrl) { %>
                            <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 300px;">
                        <% } %>
                        <% if (post.videoUrl) { %>
                            <video controls style="max-width: 300px;">
                                <source src="<%= post.videoUrl %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } %>

        <% if (groupedPosts.low.length > 0) { %>
            <h2 class="mt-4">Low Priority</h2>
            <ul class="list-group">
                <% groupedPosts.low.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.locationName) { %>
                            <p><strong>Location:</strong> <%= post.locationName %></p>
                        <% } %>
                        <% if (post.imageUrl) { %>
                            <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 300px;">
                        <% } %>
                        <% if (post.videoUrl) { %>
                            <video controls style="max-width: 300px;">
                                <source src="<%= post.videoUrl %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </div>

    <button id="mapButton">üåç</button>
    <div id="mapPanel">
        <div id="map"></div>
    </div>

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        // Toggle map panel
        document.getElementById('mapButton').addEventListener('click', function() {
            var mapPanel = document.getElementById('mapPanel');
            mapPanel.classList.toggle('open');
        });

        // Initialize Leaflet map
        document.addEventListener('DOMContentLoaded', function() {
            var map = L.map('map').setView([0, 0], 2); // Default center

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            const posts = JSON.parse('<%= JSON.stringify(groupedPosts.high.concat(groupedPosts.medium).concat(groupedPosts.low)) %>');

            posts.forEach(post => {
                if (post.location && post.location.coordinates && post.location.coordinates.length === 2) {
                    const [longitude, latitude] = post.location.coordinates;
                    L.marker([latitude, longitude]).addTo(map)
                        .bindPopup(`<b>${post.title}</b><br>${post.description}<br><a href="${post.imageUrl || post.videoUrl}" target="_blank">View Media</a>`);
                }
            });
        });
    </script>
</body>
</html>
