<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
    <style>
        #map {
            height: 400px; /* Define height for the map */
            width: 100%;   /* Full width for the map */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/feed">Home</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/create-post">Create Post</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/my-posts">My Posts</a>
                </li>
            </ul>
            <form action="/logout" method="GET" class="d-inline">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </nav>
    <div class="container mt-4">
        <h1>Feed</h1>
        <form action="/feed" method="GET">
            <div class="form-group mt-3" id="radius-group">
                <label for="radius" class="form-label">Radius:</label>
                <select id="radius" name="radius" class="form-select">
                    <option value="">All Posts</option>
                    <option value="1000" <%= radius === '1000' ? 'selected' : '' %>>1 km</option>
                    <option value="5000" <%= radius === '5000' ? 'selected' : '' %>>5 km</option>
                    <option value="10000" <%= radius === '10000' ? 'selected' : '' %>>10 km</option>
                    <option value="100000" <%= radius === '100000' ? 'selected' : '' %>>10+ km</option>
                </select>
            </div>
            <input type="hidden" id="latitude" name="latitude" value="<%= user ? user.latitude : '' %>">
            <input type="hidden" id="longitude" name="longitude" value="<%= user ? user.longitude : '' %>">
            <button type="submit" class="btn btn-primary mt-2">Apply</button>
        </form>

        <% const totalPosts = groupedPosts.high.length + groupedPosts.medium.length + groupedPosts.low.length; %>
        <p class="mt-4">Showing <%= totalPosts %> posts.</p>

        <!-- Map container -->
        <div id="map"></div>

        <% if (groupedPosts.high.length > 0) { %>
            <h2 class="mt-4">Top Priority</h2>
            <ul class="list-group">
                <% groupedPosts.high.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.locationName) { %>
                            <p><strong>Location:</strong> <%= post.locationName %></p>
                        <% } %>
                        <% if (post.imageUrl) { %>
                            <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 300px;">
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } %>

        <% if (groupedPosts.medium.length > 0) { %>
            <h2 class="mt-4">Medium Priority</h2>
            <ul class="list-group">
                <% groupedPosts.medium.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.locationName) { %>
                            <p><strong>Location:</strong> <%= post.locationName %></p>
                        <% } %>
                        <% if (post.imageUrl) { %>
                            <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 300px;">
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } %>

        <% if (groupedPosts.low.length > 0) { %>
            <h2 class="mt-4">Low Priority</h2>
            <ul class="list-group">
                <% groupedPosts.low.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.locationName) { %>
                            <p><strong>Location:</strong> <%= post.locationName %></p>
                        <% } %>
                        <% if (post.imageUrl) { %>
                            <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 300px;">
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize the map
            const map = L.map('map').setView([51.505, -0.09], 13);

            // Add a tile layer to the map
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            // Extract the posts data from the EJS template
            const posts = JSON.parse('<%= JSON.stringify(groupedPosts.high.concat(groupedPosts.medium).concat(groupedPosts.low)) %>');

            // Add markers for each post with a location
            posts.forEach(post => {
                if (post.location && post.location.coordinates && post.location.coordinates.length === 2) {
                    const [longitude, latitude] = post.location.coordinates;
                    L.marker([latitude, longitude]).addTo(map)
                        .bindPopup(`<b>${post.title}</b><br>${post.description}<br><a href="${post.imageUrl || post.videoUrl}" target="_blank">View Media</a>`);
                }
            });
        });
    </script>
</body>
</html>
