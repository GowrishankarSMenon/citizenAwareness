<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <style>
        /* Enhanced styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #007bff;
        }

        h2 {
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .list-group-item {
            border: none;
            border-radius: 8px;
            margin-bottom: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 15px;
        }

        .list-group-item h3 {
            margin-top: 0;
        }

        .list-group-item img {
            border-radius: 8px;
            margin-top: 10px;
        }

        .list-group-item video {
            border-radius: 8px;
            margin-top: 10px;
        }

        #mapButton {
            position: fixed;
            top: 20px;
            right: 20px;
            background: #007bff;
            color: white;
            border: none;
            padding: 15px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 20px;
            z-index: 1001;
            transition: background 0.3s;
        }

        #mapButton:hover {
            background: #0056b3;
        }

        #mapPanel {
            height: 400px;
            width: 300px;
            position: fixed;
            top: 20px;
            right: 20px;
            transform: translateX(100%);
            transition: transform 0.5s ease, opacity 0.5s ease;
            z-index: 1000;
            background: white;
            border: 1px solid #ddd;
            opacity: 0;
            overflow: hidden;
            border-radius: 8px;
        }

        #mapPanel.open {
            transform: translateX(0);
            opacity: 1;
        }

        #map {
            height: 100%;
            width: 100%;
            border-radius: 8px;
        }

        .nav-buttons {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .nav-buttons a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }

        .nav-buttons a:hover {
            text-decoration: underline;
        }

        /* Modern form styling */
        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
            color: #007bff;
        }

        .form-select {
            border-radius: 8px;
            border: 1px solid #ced4da;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.075);
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
</head>

<body>
    <div class="container mt-4">
        <h1>Feed</h1>
        
        <!-- Navigation Links -->
        <div class="nav-buttons">
            <a href="/create-post" class="btn btn-outline-primary me-2">Create Post</a>
            <a href="/my-posts" class="btn btn-outline-secondary">My Posts</a>
        </div>

        <form action="/feed" method="GET">
            <div class="form-group">
                <label for="radius" class="form-label">Radius:</label>
                <select id="radius" name="radius" class="form-select">
                    <option value="">All Posts</option>
                    <option value="1000" <%= radius === '1000' ? 'selected' : '' %>>1 km</option>
                    <option value="5000" <%= radius === '5000' ? 'selected' : '' %>>5 km</option>
                    <option value="10000" <%= radius === '10000' ? 'selected' : '' %>>10 km</option>
                    <option value="100000" <%= radius === '100000' ? 'selected' : '' %>>10+ km</option>
                </select>
            </div>
            <input type="hidden" id="latitude" name="latitude" value="<%= user ? user.latitude : '' %>">
            <input type="hidden" id="longitude" name="longitude" value="<%= user ? user.longitude : '' %>">
            <button type="submit" class="btn btn-primary mt-2">Apply</button>
        </form>

        <% const totalPosts = groupedPosts.high.length + groupedPosts.medium.length + groupedPosts.low.length; %>
        <p class="mt-4">Showing <%= totalPosts %> posts.</p>

        <% if (groupedPosts.high.length > 0) { %>
            <h2 class="mt-4">Top Priority</h2>
            <ul class="list-group">
                <% groupedPosts.high.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.locationName) { %>
                            <p><strong>Location:</strong> <%= post.locationName %></p>
                        <% } %>
                        <% if (post.imageUrl) { %>
                            <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 100%;">
                        <% } %>
                        <% if (post.videoUrl) { %>
                            <video controls style="max-width: 100%;">
                                <source src="<%= post.videoUrl %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } %>

        <% if (groupedPosts.medium.length > 0) { %>
            <h2 class="mt-4">Medium Priority</h2>
            <ul class="list-group">
                <% groupedPosts.medium.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.locationName) { %>
                            <p><strong>Location:</strong> <%= post.locationName %></p>
                        <% } %>
                        <% if (post.imageUrl) { %>
                            <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 100%;">
                        <% } %>
                        <% if (post.videoUrl) { %>
                            <video controls style="max-width: 100%;">
                                <source src="<%= post.videoUrl %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } %>

        <% if (groupedPosts.low.length > 0) { %>
            <h2 class="mt-4">Low Priority</h2>
            <ul class="list-group">
                <% groupedPosts.low.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.locationName) { %>
                            <p><strong>Location:</strong> <%= post.locationName %></p>
                        <% } %>
                        <% if (post.imageUrl) { %>
                            <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 100%;">
                        <% } %>
                        <% if (post.videoUrl) { %>
                            <video controls style="max-width: 100%;">
                                <source src="<%= post.videoUrl %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </div>

    <!-- Leaflet map and script -->
    <button id="mapButton">üìç</button>
    <div id="mapPanel">
        <div id="map"></div>
    </div>

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        document.getElementById('mapButton').addEventListener('click', function() {
            var mapPanel = document.getElementById('mapPanel');
            mapPanel.classList.toggle('open');
        });

        document.addEventListener('DOMContentLoaded', function() {
            var map = L.map('map').setView([0, 0], 2);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            const posts = JSON.parse('[{"location":{"type":"Point","coordinates":[76.3984424,10.2296973]},"_id":"66c31695e8f74539338ae2d1","author":"akshaysunil@gmail.com","title":"asd","description":"asd","imageUrl":"/uploads/1724061333836.jpg","videoUrl":null,"priority":"high","date":"2024-08-19T09:55:33.847Z","__v":0},{"location":{"type":"Point","coordinates":[76.3984424,10.2296973]},"_id":"66c31890cfdb8f7136b42feb","author":"akshaysunil@gmail.com","title":"precaution","description":"hii","imageUrl":"/uploads/1724061840017.jpg","videoUrl":null,"priority":"medium","date":"2024-08-19T10:04:00.023Z","__v":0}]');

            posts.forEach(post => {
                if (post.location && post.location.coordinates && post.location.coordinates.length === 2) {
                    const [longitude, latitude] = post.location.coordinates;
                    L.marker([latitude, longitude]).addTo(map);
                }
            });
        });
    </script>
</body>

</html>
