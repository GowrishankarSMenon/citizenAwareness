<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/feed">Home</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/create-post">Create Post</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/my-posts">My Posts</a>
                </li>
            </ul>
            <form action="/logout" method="GET" class="d-inline">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </nav>
    <div class="container mt-4">
        <h1>Feed</h1>
        <form action="/feed" method="GET">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="sortByLocation" name="sortByLocation">
                <label class="form-check-label" for="sortByLocation">
                    Sort by location
                </label>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Apply</button>
        </form>

        <% if (groupedPosts.high.length > 0) { %>
            <h2 class="mt-4">Top Priority</h2>
            <ul class="list-group">
                <% groupedPosts.high.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.location && post.location.coordinates) { %>
                            <p><strong>Location:</strong> Latitude: <%= post.location.coordinates[1] %>, Longitude: <%= post.location.coordinates[0] %></p>
                        <% } %>
                        <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 300px;">
                    </li>
                <% }) %>
            </ul>
        <% } %>

        <% if (groupedPosts.medium.length > 0) { %>
            <h2 class="mt-4">Medium Priority</h2>
            <ul class="list-group">
                <% groupedPosts.medium.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.location && post.location.coordinates) { %>
                            <p><strong>Location:</strong> Latitude: <%= post.location.coordinates[1] %>, Longitude: <%= post.location.coordinates[0] %></p>
                        <% } %>
                        <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 300px;">
                    </li>
                <% }) %>
            </ul>
        <% } %>

        <% if (groupedPosts.low.length > 0) { %>
            <h2 class="mt-4">Low Priority</h2>
            <ul class="list-group">
                <% groupedPosts.low.forEach(post => { %>
                    <li class="list-group-item">
                        <h3><%= post.title %></h3>
                        <p><%= post.description %></p>
                        <p><strong>Priority:</strong> <%= post.priority %></p>
                        <% if (post.location && post.location.coordinates) { %>
                            <p><strong>Location:</strong> Latitude: <%= post.location.coordinates[1] %>, Longitude: <%= post.location.coordinates[0] %></p>
                        <% } %>
                        <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 300px;">
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </div>
</body>
</html>
