<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Posts</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/feed">Home</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/create-post">Create Post</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/my-posts">My Posts</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-4">
        <h1>My Posts</h1>
        <ul class="list-group">
            <% posts.forEach(post => { %>
                <li class="list-group-item">
                    <h2><%= post.title %></h2>
                    <p><%= post.description %></p>
                    <p><strong>Priority:</strong> <%= post.priority %></p>
                    <img src="<%= post.imageUrl %>" alt="<%= post.title %>" style="max-width: 300px;">
                    <form action="/delete-post/<%= post._id %>" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
